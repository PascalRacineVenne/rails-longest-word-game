<h1>New Game</h1>
<h2>

  <% @random.each do |letter| %>
    <span class="letters"> <%= letter %> </span>
  <% end %>
  </h2>

<p>What is the longest word you can find?</p>
<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @random %>
  <input type="text" name="word" id="longest-word">
  <input type="submit" name="Play">
</form>
